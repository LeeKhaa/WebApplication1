@{
    // ViewData["Title"] = "Home Page";
    Layout = "_Layout";
    string gender;
    if (ViewBag.Gender == "M")
    {
        gender = "Male";
    }
    else
    {
        gender = "Female";
    }
}

<div class="container-fluid">
    <table class="table w-25 m-auto">
        <tr>
            <td>EmPloyee ID</td>
            <td>@ViewBag.EmpID</td>
        </tr>
        <tr>
            <td>EmPloyee Name</td>
            <td>@ViewBag.Name</td>
        </tr>
        <tr>
            <td>EmPloyee Salary</td>
            <td>@ViewBag.Salary</td>
        </tr>
        <tr>
            <td>EmPloyee Gender</td>
            <td>@gender</td>
        </tr>
        <tr>
            <td colspan="2">
                @if (ViewBag.Salary > 2000)
                {
                    <span class="text-success">Good work!!!</span>
                }
                else
                {
                    <span class="text-danger">You have to work harder.</span>
                }
            </td>
        </tr>
        <tr>
            <td>Year</td>
            <td>
                <ul>
                    @for (int i = ViewBag.Year; i <=  DateTime.Now.Year; i++)
                    {
                        <li>@i</li>
                    }
                </ul>
            </td>
        </tr>
        <tr>
            <td>Positions</td>
            <td>
                <ul>
                    @foreach (var pos in ViewBag.Positions)
                    {
                        <li>@pos</li>
                    }
                </ul>
            </td>
        </tr>
    </table>
</div>

